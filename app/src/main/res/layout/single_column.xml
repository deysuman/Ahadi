<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/listsubitemborder"
    >
    <!--android:background="#8CD4F5"-->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@drawable/listsubitemborder"
        android:layout_gravity="center"
        tools:ignore="UselessParent">
        <com.andexert.library.RippleView
            android:id="@+id/more"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            rv_centered="true">
        <LinearLayout
            android:id="@+id/itemnamefield"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
    <TextView
        android:id="@+id/itemname"
        android:layout_width="wrap_content"
        android:text="@string/app_name"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="@color/white"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:gravity="right"
            android:layout_alignRight="@+id/itemnamefield"
            android:layout_height="wrap_content"
            tools:ignore="RtlHardcoded">
    <ImageView
        android:layout_width="25dp"
        android:id="@+id/itemavatar"
        android:layout_height="25dp"
        android:src="@drawable/forwardarrow"
        android:contentDescription="@string/gothere"/>
        </LinearLayout>
        </com.andexert.library.RippleView>
    </RelativeLayout>




</LinearLayout>